{
  "name": "budgettool",
  "version": "0.0.1",
  "description": "Get monthly actuals in MD and JSON format",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "webpack --config webpack.common.js --watch",
    "build": "webpack --config webpack.prod.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "make:linux": "electron-builder --linux",
    "make:macos": "electron-builder --mac",
    "make:win": "electron-builder --win --x64"
  },
  "author": "Petru Catana",
  "license": "ISC",
  "build": {
    "productName": "Budget-Tool",
    "appId": "com.catana.budgetTool",
    "files": [
      "build/**/*",
      "assets/**/*",
      "utils/**/*",
      "index.html",
      "splash.html",
      "splash.css",
      "main.js",
      "preload.js",
      "auth.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/budgetToolLogo.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 420,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/images/budgetToolLogo.png",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "electron-reload": "^2.0.0-alpha.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@makerdao/dai-ui-theme-maker": "^0.0.66",
    "babel-loader": "^8.2.3",
    "electron-settings": "^4.0.2",
    "express": "^4.18.1",
    "googleapis": "^92.0.0",
    "graphql": "^16.3.0",
    "mongodb": "^4.3.1",
    "mustache": "^4.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.1",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "remark-gfm": "^3.0.1",
    "theme-ui": "^0.13.1",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2"
  }
}
